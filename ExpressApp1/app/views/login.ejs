<html>
<head>
    <title>Using Sessions in Express apps</title>
	 
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
	
      <script>
    $(document).ready(function () {
        var username, password;
        $("#submit").click(function () {
            username = $("#username").val();
            password = $("#password").val();			
			window.location.href = "/usersDb/"+username;  
        });
    });

	 $(document).ready(function () {
        var username, password;
        $("#register").click(function () {
            username = $("#username").val();
            password = $("#password").val();			
          $.post("http://localhost:3000/usersDb", { username: username, password: password }, function (data) {
                if (data === 'done') {
                     window.location.href = "/login";
                }

				
            }); 
        });
    });
    </script>

</head>
<body >
 	<% include master.html %>
  
    <div id="main">

        <h1><%=welcome%></h1>  

        <div style="margin:3%" >
            <Table type="Table1" height="400">
                <tr Height="36px">
                    <td width="140px">User Name: </td>
                    <td width="460px">
                        <input type="text" size="30" placeholder="Enter your user name" id="username">

                    </td>
                </tr>
                <tr Height="36px">
                    <td width="140px">Password: </td>
                    <td width="460px">
                        <input type="password" size="30" placeholder="Enter your password" id="password">
                    </td>

                </tr>
                <tr Height="10px">
                    <td width="140px"></td>
                    <td width="460px">
                        <input type="button" value="Login" id="submit">
                    </td>
					<td width="460px">
                        <input type="button" value="Register" id="register">
                    </td>
                </tr>
            </Table>


            </div>
        </div>
   
</body>
</html>